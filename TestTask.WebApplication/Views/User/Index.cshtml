<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">


                <div class="card card-lightblue">
                    <div class="card-header">
                        <h3 class="card-title">User Report</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>FullName</th>
                                    <th>Password</th>
                                    <th>Gender</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                @{
                                    if (@Model != null)
                                    {
                                        @foreach (var item in @Model)
                                        {
                                            <tr>
                                                <td>@item.FullName</td>
                                                <td>@item.Password</td>
                                                <td>

                                                    @switch (@item.Gender)
                                                    {
                                                        case 0:
                                                            <p>Unknown</p>
                                                            ;
                                                            break;
                                                        case 1:
                                                            <p>Male</p>
                                                            ;
                                                            break;
                                                        case 2:
                                                            <p>Female</p>
                                                            ;
                                                            break;

                                                        default:
                                                            <p>Not given</p>
                                                            break;
                                                    }
                                                </td>
                                                <td>
                                                    <a asp-action="Edit" class="btn btn-warning btn-xs" asp-route-id="@item.UserId"  ><i class="fas fa-edit me-1"></i> Edit</a>
                                                    <button class="btn btn-danger btn-xs" userid="@item.UserId" onclick="DeleteUser(this)" ><i class="fas fa-trash me-1"></i> Delete</button>
                                                </td>
                                            </tr>
                                        }
                                    }

                                }

                            </tbody>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
