@using TestTask.Model;
@model IEnumerable<UserM>

@{
    ViewData["Title"] = "User Report";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <a asp-action="Create" class="btn btn-secondary">
                    <span class="tf-icons fas fa-plus"></span>&nbsp; Add User
                </a>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">User</a></li>
                    <li class="breadcrumb-item active">Report</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">


                <div class="card card-lightblue">
                    <div class="card-header">
                        <h3 class="card-title">User Report</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>FullName</th>
                                    <th>Password</th>
                                    <th>Gender</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                @{
                                    if (@Model != null)
                                    {
                                        @foreach (var item in @Model)
                                        {
                                            <tr>
                                                <td>@item.FullName</td>
                                                <td>@item.Password</td>
                                                <td>

                                                    @switch (@item.Gender)
                                                    {
                                                        case 0:
                                                            <p>Unknown</p>
                                                            ;
                                                            break;
                                                        case 1:
                                                            <p>Male</p>
                                                            ;
                                                            break;
                                                        case 2:
                                                            <p>Female</p>
                                                            ;
                                                            break;

                                                        default:
                                                            <p>Not given</p>
                                                            break;
                                                    }
                                                </td>
                                                <td>
                                                    <a asp-action="Edit" class="btn btn-warning btn-xs" asp-route-id="@item.UserId"><i class="fas fa-edit me-1"></i> Edit</a>
                                                    <button type="button" class="btn btn-danger btn-xs" onclick="DeleteUser('@item.UserId')">
                                                    </button>

                                                    <input id="Delete"
                                                   onclick="DeleteUser('@item.UserId')"
                                                   type="button"
                                                   value="Delete" />

                                                </td>
                                            </tr>
                                        }
                                    }

                                }

                            </tbody>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
@section Scripts{
    <script type="text/javascript">

        function DeleteUser(UserId) {
            alert(UserId)

            swal({
                title: "Are you sure?",
                text: "Are you sure that you want to delete this User?",
                type: "warning",
                showCancelButton: true,
                closeOnConfirm: false,
                confirmButtonClass: "btn-danger",
                confirmButtonText: "Delete",
                confirmButtonColor: "#ec6c62"
            },
                function () {
                    $.ajax({
                        url: "/User/Delete/",
                        data:
                        {
                            "UserId": UserId
                        },
                        async: false,
                        contentType: false,
                        processData: false,
                        datatype: "application/json",
                        type: "DELETE"
                    })
                        .done(function (data) {
                            sweetAlert
                                ({
                                    title: "Deleted!",
                                    text: "Your file was successfully deleted!",
                                    type: "success"
                                },
                                    function () {
                                        window.location.href = '/User/Index';
                                    });
                        })
                        .error(function (data) {
                            swal("Oops", "We couldn't connect to the server!", "error");
                        });
                });

        }
    </script>
}